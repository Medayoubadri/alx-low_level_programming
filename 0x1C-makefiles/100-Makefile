# "Limits are just opportunities to be clever." - A Makefile Guru, probably.

NAME = school
SRC = main.c school.c
OBJ = main.o school.o
CC_COMMAND = gcc -Wall -Werror -Wextra -pedantic -c
LINK_COMMAND = gcc -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(LINK_COMMAND) $(OBJ) -o $(NAME)

main.o: main.c m.h
	$(CC_COMMAND) main.c -o main.o

school.o: school.c m.h
	$(CC_COMMAND) school.c -o school.o

clean:
	$(RM) $(OBJ)

oclean:
	$(RM) *~

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all
